<Window x:Class="Szamitogepek.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szamitogepek"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="826.074">
    <Grid Margin="0,0,2,0">
        <TextBox x:Name="Felhasznalo" HorizontalAlignment="Left" Height="23" Margin="54,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Login" Content="Bejelentkezés" HorizontalAlignment="Left" Margin="54,252,0,0" VerticalAlignment="Top" Width="92" Height="45" Click="Login_Click"/>
        <Label Content="Felhasználó név:" HorizontalAlignment="Left" Margin="49,84,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Jelszó:" HorizontalAlignment="Left" Margin="54,176,0,0" VerticalAlignment="Top" FontSize="16"/>
        <PasswordBox x:Name="jelszo" HorizontalAlignment="Left" Margin="54,212,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Bejelentkezés" HorizontalAlignment="Left" Margin="49,42,0,0" VerticalAlignment="Top" FontSize="20" Width="138"/>

    </Grid>
</Window>
